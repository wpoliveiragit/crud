<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%yellow(%d{yyyy-MM-dd HH:mm:ss}) %highlight(%-5level){red} [%highlight(%thread){magenta}] %cyan(%logger{36}) - %msg%n</pattern>-->
            <pattern>%yellow(%d{yyyy-MM-dd HH:mm:ss}) - %yellow(%d{yyyy-MM-dd HH:mm:ss}){bold} %highlight(%-5level){red} [%highlight(%thread){magenta}] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
